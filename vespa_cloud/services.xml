<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!-- Copyright Vespa.ai. Licensed under the terms of the Apache 2.0 license. See LICENSE in the
project root. --><services xmlns:deploy="vespa" xmlns:preprocess="properties" minimum-required-vespa-version="8.519.55" version="1.0">
    <container id="default" version="1.0">
        <document-processing/>
        <document-api/>
        <!-- Uncomment this to use secret from Vespa Cloud Secret Store -->
        <!-- <secrets>
            <openai-api-key vault="sample-apps" name="openai-dev" />
        </secrets> -->
        <!-- Setup the client to OpenAI -->
        <component class="ai.vespa.llm.clients.OpenAI" id="openai">
            <config name="ai.vespa.llm.clients.llm-client">
                <!-- Uncomment this to use secret from Vespa Cloud Secret Store -->
                <!-- <apiKeySecretName>openai-api-key</apiKeySecretName> -->
            </config>
        </component>
        <component id="nomicmb" type="hugging-face-embedder">
            <transformer-model url="https://data.vespa-cloud.com/onnx_models/nomic-ai-modernbert-embed-base/model.onnx"/>
            <transformer-token-type-ids/>
            <tokenizer-model url="https://data.vespa-cloud.com/onnx_models/nomic-ai-modernbert-embed-base/tokenizer.json"/>
            <transformer-output>token_embeddings</transformer-output>
            <max-tokens>8192</max-tokens>
            <prepend>
                <query>search_query:</query>
                <document>search_document:</document>
            </prepend>
        </component>
        <search>
            <chain id="openai" inherits="vespa">
                <searcher id="ai.vespa.search.llm.RAGSearcher">
                    <config name="ai.vespa.search.llm.llm-searcher">
                        <providerId>openai</providerId>
                    </config>
                </searcher>
            </chain>
        </search>
        <nodes>
            <node hostalias="node1"/>
        </nodes>
        <clients>
            <client id="mtls-client" permissions="read">
                <certificate file="security/clients.pem"/>
            </client>
            <client id="token-console-client" permissions="read,write">
                <token id="rag-blueprint"/>
            </client>
        </clients>
    </container>
    <!-- See https://docs.vespa.ai/en/reference/services-content.html -->
    <content id="content" version="1.0">
        <min-redundancy>2</min-redundancy>
        <documents>
            <document mode="index" type="doc"/>
        </documents>
        <nodes>
            <node distribution-key="0" hostalias="node1"/>
        </nodes>
    </content>
</services>
